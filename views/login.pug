extends base

block content 
    h3 로그인
    if(errorMessage)
        h3=errorMessage 
    form(method="POST")
        div
            span 이메일
            input(type="email",name="email",placeholder="이메일을 입력해주세요")
        div 
            span 비밀번호
            input(type="password",name="password",placeholder="비밀번호를 입력해주세요")
        input(type="submit",value="로그인")